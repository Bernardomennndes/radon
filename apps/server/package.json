{
  "name": "server",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts --max-warnings 0",
    "check-types": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:run": "tsx src/migrate.ts",
    "db:create-tables": "tsx src/create-tables.ts",
    "db:setup": "tsx src/setup-db.ts",
    "db:seed": "tsx src/seed.ts",
    "db:test": "tsx src/test-tables.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test:db": "tsx src/test-drizzle.ts",
    "test:tables": "tsx src/test-supabase-tables.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.31.2",
    "drizzle-orm": "^0.44.2",
    "express": "^4.19.2",
    "postgres": "^3.4.7",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.15.3",
    "@types/pg": "^8.15.4",
    "eslint": "^9.29.0",
    "tsx": "^4.16.2",
    "typescript": "5.8.2"
  }
}
